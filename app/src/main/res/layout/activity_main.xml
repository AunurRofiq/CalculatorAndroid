<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="8dp">

<!--    <TextView-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:text="Hello World!"-->
<!--        app:layout_constraintBottom_toBottomOf="parent"-->
<!--        app:layout_constraintLeft_toLeftOf="parent"-->
<!--        app:layout_constraintRight_toRightOf="parent"-->
<!--        app:layout_constraintTop_toTopOf="parent" />-->

    <EditText
        android:id="@+id/numeric_et"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="0"
        android:textAlignment="viewEnd"
        android:textSize="50sp"/>

    <EditText
        android:id="@+id/numeric_result_et"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/numeric_et"
        android:text="0"
        android:textAlignment="viewEnd"
        android:textSize="50sp"/>

    <Button
        android:id="@+id/btn_ac"
        android:layout_width="290dp"
        android:layout_height="90dp"
        android:layout_below="@+id/numeric_result_et"
        android:layout_marginTop="10dp"
        android:text="ac"
        android:textSize="30sp"/>

    <Button
        android:id="@+id/btn_division"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/numeric_result_et"
        android:layout_toRightOf="@+id/btn_ac"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text="/"
        android:textSize="30sp"/>

    <Button
        android:id="@+id/btn_7"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/btn_ac"
        android:layout_marginTop="10dp"
        android:text="7"
        android:textSize="50sp"/>

    <Button
        android:id="@+id/btn_8"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/btn_ac"
        android:layout_toRightOf="@+id/btn_7"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text="8"
        android:textSize="50sp"/>

    <Button
        android:id="@+id/btn_9"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/btn_ac"
        android:layout_toRightOf="@+id/btn_8"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text="9"
        android:textSize="50sp"/>

    <Button
        android:id="@+id/btn_multiplication"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/btn_ac"
        android:layout_toRightOf="@+id/btn_9"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text="x"
        android:textSize="30sp"/>

    <Button
        android:id="@+id/btn_4"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/btn_7"
        android:layout_marginTop="10dp"
        android:text="4"
        android:textSize="50sp"/>

    <Button
        android:id="@+id/btn_5"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/btn_8"
        android:layout_toRightOf="@+id/btn_4"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text="5"
        android:textSize="50sp"/>

    <Button
        android:id="@+id/btn_6"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/btn_9"
        android:layout_toRightOf="@+id/btn_5"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text="6"
        android:textSize="50sp"/>

    <Button
        android:id="@+id/btn_minus"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/btn_multiplication"
        android:layout_toRightOf="@+id/btn_6"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text="-"
        android:textSize="50sp"/>

    <Button
        android:id="@+id/btn_1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/btn_4"
        android:layout_marginTop="10dp"
        android:text="1"
        android:textSize="50sp"/>

    <Button
        android:id="@+id/btn_2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/btn_5"
        android:layout_toRightOf="@+id/btn_1"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text="2"
        android:textSize="50sp"/>

    <Button
        android:id="@+id/btn_3"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/btn_6"
        android:layout_toRightOf="@+id/btn_2"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text="3"
        android:textSize="50sp"/>

    <Button
        android:id="@+id/btn_add"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/btn_minus"
        android:layout_toRightOf="@+id/btn_9"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text="+"
        android:textSize="30sp"/>

    <Button
        android:id="@+id/btn_0"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/btn_2"
        android:layout_toRightOf="@+id/btn_1"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text="0"
        android:textSize="50sp"/>

    <Button
        android:id="@+id/btn_equals"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/btn_add"
        android:layout_toRightOf="@+id/btn_9"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text="="
        android:textSize="30sp"/>

</RelativeLayout>